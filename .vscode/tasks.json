{
    "tasks": [
        {
            "label": "make build directory",
            "type": "shell",
            "command": "if [ ! -d build ]; then mkdir build; fi",
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "type": "shell",
            "label": "build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++17",
                "-fsanitize=address",
                "-pthread",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "make build directory",
                "build active file"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}