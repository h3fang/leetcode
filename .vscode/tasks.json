{
    "tasks": [
        {
            "label": "build directory",
            "type": "shell",
            "command": "if [ ! -d build ]; then mkdir build; fi",
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "-fsanitize=address",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "build directory",
                "g++ build active file"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}